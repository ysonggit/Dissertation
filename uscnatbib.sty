\NeedsTeXFormat{LaTeX2e}[1994/12/01]
\ProvidesPackage{uscnatbib}[2009/02/03]

\let\bibliofont\normalsize
\providecommand{\MR}{\relax\ifhmode\unskip\space\fi }
\setlength\bibhang{20pt}

\renewenvironment{thebibliography}[1]{%
 \bibsection\parindent \z@\bibpreamble\bibfont\list
   {\@biblabel{\arabic{NAT@ctr}}}{\@bibsetup{#1}%  
    \setcounter{NAT@ctr}{0}}%
    \ifNAT@openbib
      \renewcommand\newblock{\par}
    \else
      \renewcommand\newblock{\hskip .11em \@plus.33em \@minus.07em}%
    \fi
    \sloppy\clubpenalty4000\widowpenalty4000
    \sfcode`\.=1000\relax
    \SingleSpacing                            %% July 2007 adjustment
    \setlength{\parskip}{\baselineskip}     %% July 2007 adjustment
    \vspace*{-\baselineskip}                %% July 2007 adjustment
    \let\citeN\cite \let\shortcite\cite
    \let\citeasnoun\cite
 }{\def\@noitemerr{%
  \PackageWarning{natbib}
     {Empty `thebibliography' environment}}%
  \endlist\vskip-\lastskip}